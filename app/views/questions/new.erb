<div class="container">
	<p>Please ask a question</p>

	<% if @error != nil %>
		<h2>Errors: <%= @error %></h2>
	<% end %>

	<form action="/questions" method="post">
			<textarea type="text" name="question[description]" class="text-form" placeholder="Your question"></textarea>
			<input type="submit" value="submit">
	</form>
</div>